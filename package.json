{
  "name": "nomoji.dev",
  "version": "1.0.0",
  "description": "Control emoji usage in AI-generated code, documentation, and output",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint --write .",
    "lint:check": "biome lint .",
    "check": "biome check --write .",
    "check:ci": "biome ci .",
    "prepare": "lefthook install",
    "hooks:install": "lefthook install",
    "hooks:uninstall": "lefthook uninstall"
  },
  "keywords": [
    "emoji",
    "ai",
    "coding-assistant",
    "cloudflare-workers",
    "llm",
    "configuration"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.3.3",
    "@cloudflare/vitest-pool-workers": "^0.10.4",
    "@cloudflare/workers-types": "^4.20241022.0",
    "lefthook": "^2.0.2",
    "typescript": "^5.3.3",
    "vitest": "~3.2.0",
    "wrangler": "^4.45.4"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.4",
    "@scalar/hono-api-reference": "^0.9.23",
    "hono": "^4.6.10",
    "zod": "^4.1.12"
  }
}
